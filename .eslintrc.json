{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended",
         "airbnb-base/legacy"
        ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": 0,
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-var": "error",
        "indent": [2, "tab"],
        "no-tabs": 0,
        "class-methods-use-this": 0,
        "no-console": 0,
        "no-shadow": 0,
        "consistent-return": 0,
        "no-unused-vars": ["error", {
            "args": "none",
            "caughtErrors": "none",
            "ignoreRestSiblings": true,
            "vars": "all"
          }]
    }
}
